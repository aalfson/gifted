	
	<%= form_tag(controller: "registrations", action: "finish") do %>

		<%= label_tag(:name, "Your Name:") %>
		<%= text_field_tag(:name, "", :autofocus => true)%>
		
		<%= label_tag(:birthday, "Your Birthday:") %>
		<%= date_select(:birthday, "", {discard_year: true, :order => [:month, :day]}, :class => "span2") %>
		
		<p>Please enter the email addresses of the people you want to receive suggestions for your birthday gift:</p>
		
		<%= label_tag(:recipient1, "Recipient 1: ") %>
		<%= email_field_tag(:recipient1) %>
		
		<%= label_tag(:recipient2, "Recipient 2: ") %>
		<%= email_field_tag(:recipient2) %>

		<%= label_tag(:recipient3, "Recipient 3: ") %>
		<%= email_field_tag(:recipient3) %>

		<%= label_tag(:recipient4, "Recipient 4: ") %>
		<%= email_field_tag(:recipient4) %>

		<%= label_tag(:recipient5, "Recipient 5: ") %>
		<%= email_field_tag(:recipient5) %>
		
		<br/>
		<%= submit_tag("Submit", :class => "btn btn-primary") %>
	<% end %>